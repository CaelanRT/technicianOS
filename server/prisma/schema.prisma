generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id           String     @id @default(uuid())
  name         String     @unique
  technicianId String
  technician   Technician @relation(fields: [technicianId], references: [technicianId])
  description  String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Technician {
  technicianId String @id @default(uuid())
  name String
  email String @unique
  password String
  projects Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}